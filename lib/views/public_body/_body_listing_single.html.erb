<% if @highlight_words.nil? 
      @highlight_words = []
   end %>

<a href="<%= public_body_path(public_body) %>" class="body_listing list-group-item">
	<h3 class="head list-group-item-heading"><%= _(public_body.name) %></h3>
    <div class="desc ist-group-item-text">
    <% if !public_body.short_name.empty? || !public_body.notes_without_html.empty? %>
        <% if !public_body.short_name.empty? %>
            <%= _("Also called {{other_name}}.", :other_name => highlight_words(public_body.short_name, @highlight_words)) %>
        <% end %>
        <% if !public_body.notes_without_html.empty? %>
            <%= highlight_and_excerpt(public_body.notes_without_html, @highlight_words, 150) %>
        <% end %>
        <br>
    <% end %>
	</div>
    <span class="bottomline">
        <span class="label label-info"><%= n_('{{count}} request made', '{{count}} requests made', public_body.info_requests.size,
        :count => public_body.info_requests.size) %></span>
        <% if !public_body.is_requestable? && public_body.not_requestable_reason != 'bad_contact' %>
            <% if public_body.not_requestable_reason == 'defunct' %>
                <span class="label label-danger"><%= _('Defunct') %></span>
            <% end %>
        <% else %>
            <% if !@include_request_link_in_authority_listing.nil? %>
            <%= link_to _("Make your own request"), public_body_path(public_body) %>.
            <% end %>
        <% end %>
        <br>
        <span class="date_added">
            <%= _("Added on {{date}}", :date => simple_date(public_body.created_at)) %>.
        </span>
    </span>
</a>

