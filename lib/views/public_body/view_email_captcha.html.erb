<% @title = _("View APAI email address for '{{public_body_name}}'",:public_body_name => h(@public_body.name)) %>

<h1><%= _('View APAI email address for {{public_body_name}}',:public_body_name=>public_body_link(@public_body))%></h1>

<p><%= _('To view the email address that we use to send APAI requests to {{public_body_name}}, please enter these words.', :public_body_name => h(@public_body.name))%></p>

<%= form_for :contact do |f| %>
    <%= recaptcha_tags %>

    <%= hidden_field_tag(:submitted_view_email, { :value => 1 } ) %>
    
    <p><%= submit_tag _("View email"), :class => "btn btn-primary margin-top" %></p>
<% end %>